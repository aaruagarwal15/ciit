            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1">



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="#ECF2FA"
            android:layout_weight="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5"
                    android:layout_margin="7dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of Visit:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:fontFamily="serif"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_weight="5"
                        android:editable="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:weightSum="4"
                    android:background="#ECF2FA">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corners"
                        android:layout_margin="5dp">

                        <Button
                            android:id="@+id/btn_calendar1"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:background="@drawable/ic_calendar_icon"
                            android:textColor="@android:color/white" />

                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/r1">

                            <RadioButton
                                android:id="@+id/btn_after1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="After"/>

                            <RadioButton
                                android:id="@+id/btn_before1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Before"/>

                            <RadioButton
                                android:id="@+id/btn_on1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="On"/>

                            <RadioButton
                                android:id="@+id/btn_between1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Between"/>

                        </RadioGroup>

                        <TextView
                            android:id="@+id/tv_SelectedDate1"
                            android:layout_weight="4"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:background="#FFF"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="normal"
                            android:fontFamily="serif"/>
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="#ECF2FA"
                    android:layout_weight="0"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:weightSum="4">


                        <Button
                            android:id="@+id/btn_calendar2"
                            android:layout_width="60dp"
                            android:layout_margin="1dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:background="@drawable/ic_calendar_icon"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/dob1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            android:background="#FFF"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="normal"
                            android:fontFamily="serif"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
