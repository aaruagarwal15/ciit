                        android:layout_height="wrap_content"
                        android:text="Date of Next Visit:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:fontFamily="serif"
                        android:textColor="#000"
                        android:layout_weight="5"
                        android:textStyle="bold"
                        android:editable="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:weightSum="4">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corners"
                        android:layout_margin="5dp">

                        <Button
                            android:id="@+id/btn_calendar3"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:background="@drawable/ic_calendar_icon"
                            android:textColor="@android:color/white" />

                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/r3">

                            <RadioButton
                                android:id="@+id/btn_after3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="After"/>

                            <RadioButton
                                android:id="@+id/btn_before3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Before"/>

                            <RadioButton
                                android:id="@+id/btn_on3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="On"/>

                            <RadioButton
                                android:id="@+id/btn_between3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Between"/>

                        </RadioGroup>


                        <TextView

                            android:id="@+id/tv_SelectedDate_next1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            android:background="#FFF"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="normal"
                            android:fontFamily="serif"/>

                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="#ECF2FA"
                    android:layout_weight="0"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/btn_calendar4"
                            android:layout_margin="1dp"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:background="@drawable/ic_calendar_icon"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/dob2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="normal"
                            android:fontFamily="serif"
                            android:background="#FFF"/>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">

                <LinearLayout
